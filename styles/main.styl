$CPC = #0B4695
$NDP = #F48416
$LPC = #ED2F23
$GRN = #71C50F
$BLC = #00ABF1

*
    box-sizing: border-box

body
    box-sizing: border-box
    font-family: 'Source Code Pro'        // TODO: add font files
    -webkit-font-smoothing: antialiased
    margin: 0

aside
    position: absolute
    left: 0
    top: 0
    width: 250px
    height: 100vh
    padding: 10px
    background: rgba(white, 0.5)

    h1
        font-size: 1.2em
        margin: 0 0 10px

    h2
        font-size: 1.1em
        margin: 40px 0 0

.splitForm
    margin-bottom: 20px
    text-shadow: 1px 1px 1px white, 0 0 1px white

    label
        display: flex
        alignItems: center
        line-height: 0.9
        margin: 0.2em 0

    select
        margin-right: 3px


.district
    cursor: pointer
    stroke: white

    &:hover
        opacity: 0.8

    &.CPC
        fill: $CPC
    &.NDP
        fill: $NDP
    &.LPC
        fill: $LPC
    &.GRN
        fill: $GRN
    &.BLC
        fill: $BLC

.barContainer
    position: relative

    .text
        position: absolute
        left: 5px
        line-height: 25px
        color: white
        text-shadow: 1px 1px 3px rgba(#000, 0.5)

    &.CPC
        .bar
            background-color: $CPC
    &.NDP
        .bar
            background-color: $NDP
    &.LPC
        .bar
            background-color: $LPC
    &.GRN
        .bar
            background-color: $GRN
    &.BLC
        .bar
            background-color: $BLC

    .bar
        height: 25px
        background: #ddd
        transition: width 0.3s

        &:before
            content: ''
