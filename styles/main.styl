$partyColours = {
    CPC: #0B4695,
    NDP: #F48416,
    LPC: #ED2F23,
    GPC: #71C50F,
    BQ: #00ABF1,
    OTHER: #888
}

$barHeight = 25px

@keyframes pulseOpacity
    0%
        opacity: 1
    50%
        opacity: 0.2

*
    box-sizing: border-box

body
    box-sizing: border-box
    font-family: 'Source Code Pro', monospace
    line-height: 1.4
    -webkit-font-smoothing: antialiased
    margin: 0

a
    text-decoration: none
    color: #7a7

    &:hover
        text-decoration: underline

.loading
    height: 100vh
    width: 100vw
    text-align: center
    padding-top: 49vh
    animation: pulseOpacity 2s infinite

aside
    position: absolute
    left: 0
    top: 0
    width: 300px

    .preamble
        font-size: 12px

    .examples
        font-size: 12px
        margin-bottom: 20px

        h3
            margin-bottom: 5px

        a
            display: block

            &:before
                content: 'Â» '

    section
        padding: 20px
        margin-bottom: 20px
        background: #f5f5f5
        background: linear-gradient(#fff, rgba(#f5f5f5, 0.8))
        box-shadow: 1px 1px 1px rgba(#000, 0.1)

    h1
        font-size: 1.2em
        margin: 0 0 10px

    h2
        font-size: 1.1em
        margin: 40px 0 0

    .selected h2
        margin: 0

.splitForm
    text-shadow: 1px 1px 1px white, 0 0 1px white

    label
        display: flex
        align-items: center
        line-height: 0.9
        margin: 0.2em 0

    select
        margin-right: 3px


.district
    cursor: pointer
    stroke: white
    transition: fill 1s

    &:hover
        opacity: 0.9

    &.selected
        opacity: 0.9
        stroke-width: 2px

    for $key, $colour in $partyColours
        &.{$key}
            fill: $colour

.barContainer
    position: relative
    display: flex
    align-items: center
    height: $barHeight
    margin-bottom: 2px

    .logo
        width: $barHeight
        height: $barHeight
        float: left

    .total
        position: absolute
        right: 5px
        text-align: right
        line-height: $barHeight
        font-weight: bold
        color: black
        text-shadow: 1px 1px 0 white

    .barWrap
        position: relative
        margin-left: 5px
        height: $barHeight
        width: 100%

    .bar
        background: #ddd
        height: 100%
        transition: width 1s

        &:before
            content: ''

    for $key, $colour in $partyColours
        &.{$key}
            .bar
                background-color: $colour
            .total
                color: $colour

    .marker
        position: absolute
        top: 0
        height: 100%
        padding-left: 10px
        border-left: 1px dotted rgba(#000, 0.8)

        // Alternate (experimental) arrow form (remove height/padding above):
        // border-left: 5px solid transparent;
        // border-top: 5px solid rgba(0,0,0,0.6);
        // border-right: 5px solid transparent;
        // margin-left: -5px;

.districtInfo
    > h2
        font-size: 1em
        margin: 40px 0 10px
        text-overflow: ellipsis
        overflow: hidden
        white-space: nowrap

    .barWrap
        height: 0.6 * $barHeight

// Styles for the TimeoutTransitionGroup on the sidebar:
.selected
    transition: transform 0.2s

.sidebar-enter, .sidebar-leave.sidebar-leave-active
    transform: translateX(-260px)

.sidebar-enter.sidebar-enter-active, .sidebar-leave
    transform: translateX(0)


@media screen and (max-width: 700px)
    .results
        width: 100vw
        padding: 20px
